---
import perfil from '../assets/Perfil.png';
import perfilProfesional from '../assets/Perfil-profesional.png';
import { Image } from 'astro:assets';
---

<section class="hero-section">
	<div class="container">
		<div class="hero-grid">
			<!-- Contenido Principal -->
			<div class="hero-content">				
				<h1 class="hero-title">
					<span class="hero-subtitle">Hola, soy </span>
					<span class="hero-name text-gradient">Jhon Mendoza</span>
				</h1>
			</div>

			<!-- Imagen Flotante -->
			<div class="hero-visual">
				<div class="hero-image-wrapper">
					<div class="image-flip-container">
						<div class="image-flip-inner">
							<div class="image-flip-front">
								<Image 
									src={perfil} 
									alt="Jhon Mendoza - Profesional"
									class="hero-image"
									loading="eager"
								/>
							</div>
							<div class="image-flip-back">
								<Image 
									src={perfilProfesional} 
									alt="Jhon Mendoza - Profesional"
									class="hero-image"
									loading="eager"
								/>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Elementos decorativos -->
				<div class="decoration-blob decoration-blob-1">Desarrollador</div>
				<div class="decoration-blob decoration-blob-2">Contador público</div>
			</div>
		</div>
	</div>

	<!-- Scroll Indicator -->
	<div class="scroll-indicator">
		<span>Conoce más</span>
		<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
			<path d="M12 5v14M19 12l-7 7-7-7"/>
		</svg>
	</div>
</section>

<style>
	.hero-section {
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		padding: var(--space-20) 0;
		overflow: hidden;
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 clamp(1rem, 5vw, 3rem);
		width: 100%;
		padding-top: 40px;
	}

	.hero-grid {
		position: relative;
		display: grid;
		gap: var(--space-12);
		align-items: center;
	}

	/* ===== CONTENIDO ===== */
	.hero-content {
		position: relative;
		z-index: 2;
		text-align: center;
		animation: fadeInUp 0.8s ease-out;
		padding-left: 10%;
		padding-top: 15%;
	}

	.hero-title {
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: var(--text-primary);
		font-weight: 900;
	}

	.hero-title span {
		display: block;
	}

	.hero-subtitle {
		font-size: clamp(1.5rem, 4vw, 2rem);
	}

	.hero-name {
		font-size: clamp(2.5rem, 8vw, 4rem);
	}

	.text-gradient {
		background: var(--gradient-1);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	/* ===== IMAGEN FLOTANTE ===== */
	.hero-visual {
		position: absolute;
		inset: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		animation: fadeInUp 0.8s ease-out 0.8s backwards;
		z-index: 1;
		height: 46vh;
	}

	.hero-image-wrapper {
		position: relative;
		width: 100%;
		max-width: clamp(200px, 30vw, 600px);
		z-index: 2;
		/* animation: float 6s ease-in-out infinite; */
	}

	/* ===== EFECTO FLIP 3D ===== */
	.image-flip-container {
		perspective: 1000px;
		width: 100%;
		height: 100%;
	}

	.image-flip-inner {
		position: relative;
		width: 100%;
		height: 100%;
		transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
		transform-style: preserve-3d;
	}

	.image-flip-container:hover .image-flip-inner {
		transform: rotateY(180deg);
	}

	.image-flip-front,
	.image-flip-back {
		position: relative;
		width: 100%;
		backface-visibility: hidden;
		-webkit-backface-visibility: hidden;
	}

	.image-flip-back {
		position: absolute;
		top: 0;
		left: 0;
		transform: rotateY(180deg);
	}

	.hero-image {
		width: 100%;
		height: auto;
		display: block;
		border-radius: 1rem;
	}

	/* Decoraciones */
	.decoration-blob {
		position: absolute;
		border-radius: 50%;
		z-index: 3;
		animation: pulse 8s ease-in-out infinite;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 900;
		text-align: center;
		padding: 1rem;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
	}

	.decoration-blob-1 {
		width: 220px;
		height: 220px;
		background: var(--primary-500);
		right: 20%;
		top: 70%;
		font-size: clamp(1.5rem, 1vw, 2rem);
	}

	.decoration-blob-2 {
		width: 160px;
		height: 160px;
		background: var(--accent-purple);
		left: 85%;
		bottom: 80%;
		animation-delay: 2s;
		font-size: clamp(0.875rem, 1.5vw, 1.125rem);
	}

	/* Scroll Indicator */
	.scroll-indicator {
		position: absolute;
		bottom: 2rem;
		left: 90%;
		transform: translateX(-50%);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-secondary);
		font-size: 0.75rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		animation: bounce 2s infinite;
	}

	/* ===== ANIMACIONES ===== */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.1);
			opacity: 1;
		}
	}

	@keyframes bounce {
		0%, 100% {
			transform: translateX(-50%) translateY(0);
		}
		50% {
			transform: translateX(-50%) translateY(10px);
		}
	}

	/* ===== RESPONSIVE ===== */
	/* Móvil: Sin superposiciones, blobs ocultos */
	@media (max-width: 1023px) {
		.hero-content {
			padding-left: 0;
			padding-top: 150px;
		}

		.hero-visual {
			position: relative;
			inset: auto;
			height: auto;
			margin-top: 8rem;
		}

		.decoration-blob {
			display: none;
		}

		.scroll-indicator {
			display: none;
		}
	}

	/* Desktop: Layout original */
	@media (min-width: 1024px) {
		.hero-grid {
			grid-template-columns: 1fr 1fr;
			gap: var(--space-16);
		}

		.hero-content {
			text-align: left;
		}

		.hero-visual {
			order: 2;
		}
	}
</style>
