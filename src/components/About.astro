<style>
	.about-section {
		padding: var(--space-24) 0;
		background: var(--white);
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 clamp(1rem, 5vw, 3rem);
	}

	/* Section Header */
	.section-header {
		text-align: center;
		margin-bottom: var(--space-16);
	}

	.section-badge {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: var(--secondary-100);
		color: var(--primary-500);
		border-radius: 9999px;
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 1rem;
	}

	.section-title {
		font-size: clamp(2rem, 5vw, 3rem);
		font-weight: 800;
		color: var(--text-primary);
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.section-subtitle {
		font-size: clamp(1rem, 3vw, 1.25rem);
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto;
	}

	/* About Grid */
	.about-grid {
		display: grid;
		gap: var(--space-12);
	}

	.about-description {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.text-lg {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--text-primary);
		font-weight: 500;
	}

	.about-description p {
		font-size: 1rem;
		line-height: 1.8;
		color: var(--text-secondary);
	}

	/* Skills Carousel */
	.skills-carousel-wrapper {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.skills-carousel-container {
		position: relative;
		background: var(--background);
		padding: var(--space-8);
		border-radius: 1.5rem;
		border: 1px solid var(--secondary-300);
	}

	.skills-carousel {
		overflow: hidden;
		position: relative;
	}

	.carousel-panel {
		display: none;
		animation: fadeIn 0.4s ease;
	}

	.carousel-panel.active {
		display: block;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateX(20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.skills-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: var(--space-6);
		text-align: center;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
		gap: 1rem;
	}

	.skill-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem;
		background: var(--white);
		border-radius: 0.75rem;
		border: 1px solid var(--secondary-300);
		transition: all 0.3s ease;
		min-height: 60px;
	}

	.skill-item:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
		border-color: var(--primary-500);
	}

	.skill-icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.skill-name {
		font-size: clamp(0.813rem, 2vw, 0.9375rem);
		font-weight: 600;
		color: var(--text-primary);
		line-height: 1.3;
		overflow-wrap: break-word;
		word-break: break-word;
	}

	/* Botones de navegaci√≥n */
	.nav-button {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: var(--white);
		border: 1px solid var(--secondary-300);
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		transition: all 0.3s ease;
		z-index: 10;
		color: var(--text-primary);
	}

	.nav-button:hover:not(:disabled) {
		background: var(--primary-500);
		color: white;
		border-color: var(--primary-500);
	}

	.nav-button:disabled {
		opacity: 0;
		cursor: not-allowed;
		pointer-events: none;
	}

	.nav-prev {
		left: -20px;
	}

	.nav-next {
		right: -20px;
	}

	/* Indicadores */
	.carousel-indicators {
		display: flex;
		gap: 0.5rem;
		justify-content: center;
	}

	.indicator {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background: var(--secondary-300);
		border: none;
		cursor: pointer;
		transition: all 0.3s ease;
		padding: 0;
	}

	.indicator.active {
		background: var(--primary-500);
		width: 24px;
		border-radius: 4px;
	}

	.indicator:hover:not(.active) {
		background: var(--secondary-400);
	}

	/* Responsive */
	@media (min-width: 768px) {
		.about-grid {
			grid-template-columns: 1fr 1fr;
			align-items: start;
		}
	}

	@media (max-width: 640px) {
		.skills-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

<script>
	let currentIndex = 0;
	const panels = document.querySelectorAll('.carousel-panel');
	const indicators = document.querySelectorAll('.indicator');
	const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;
	const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;

	function updateCarousel() {
		// Actualizar paneles
		panels.forEach((panel, index) => {
			panel.classList.toggle('active', index === currentIndex);
		});

		// Actualizar indicadores
		indicators.forEach((indicator, index) => {
			indicator.classList.toggle('active', index === currentIndex);
		});

		// Actualizar botones
		if (prevBtn && nextBtn) {
			prevBtn.disabled = currentIndex === 0;
			nextBtn.disabled = currentIndex === panels.length - 1;
		}
	}

	// Navegaci√≥n con botones
	if (prevBtn) {
		prevBtn.addEventListener('click', () => {
			if (currentIndex > 0) {
				currentIndex--;
				updateCarousel();
			}
		});
	}

	if (nextBtn) {
		nextBtn.addEventListener('click', () => {
			if (currentIndex < panels.length - 1) {
				currentIndex++;
				updateCarousel();
			}
		});
	}

	// Navegaci√≥n con indicadores
	indicators.forEach((indicator, index) => {
		indicator.addEventListener('click', () => {
			currentIndex = index;
			updateCarousel();
		});
	});

	// Inicializar
	updateCarousel();
</script>
